{
    "id": "nodebb-plugin-emailer-smtp-advanced",
    "url": "https://github.com/sebastian-marinescu/nodebb-plugin-emailer-smtp-advanced",
    "name": "Emailer SMTP Advanced",
    "description": "Plugin for NodeBB allowing you to send e-mail via SMTP with TLS support.",
    "library": "./index.js",
    "templates": "./templates",
    "hooks": [
        { "hook": "filter:email.send", "method": "send" },
        { "hook": "filter:admin.header.build", "method": "admin.menu" },
        { "hook": "static:app.load", "method": "init"}
    ],
    "compatibility": "~1.4.6"
}
